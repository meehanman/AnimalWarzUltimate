<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.threeml.awu"
    android:versionCode="1"
    android:versionName="1.0"  >
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission 
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission         
    	android:name="android.permission.WAKE_LOCK"/>    
	<uses-feature 
	    android:name="android.hardware.touchscreen.multitouch.distinct" android:required="true" />
        
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_awlauncher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar"
        android:hardwareAccelerated="true"
        android:largeHeap="true" >
        <activity
            android:name="com.threeml.awu.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboard|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.threeml.awu.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >             
        </activity>
    </application>

</manifest>
